    {
      "name": "Rate limit (optional: disabled by default)",
      "item": [
        {
          "name": "Demo: push many within 1s (observe 429 if limits low)",
          "disabled": true,
          "request": {
            "method": "GET",
            "header": [
              { "key": "X-Request-Id", "value": "{{requestId}}" },
              { "key": "X-Correlation-Id", "value": "{{requestId}}" }
            ],
            "url": "{{baseUrl}}/actuator/health"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// This request does nothing; the test below fires push requests quickly.",
                  "const url = pm.environment.get('baseUrl') + '/queue/push';",
                  "const auth = 'Basic ' + btoa(pm.environment.get('userUser') + ':' + pm.environment.get('userPass'));",
                  "const consumerGroup = pm.environment.get('consumerGroup');",
                  "const headers = {",
                  "  'Authorization': auth,",
                  "  'consumerGroup': consumerGroup,",
                  "  'Content-Type': 'text/plain'",
                  "};",
                  "const attempts = parseInt(pm.environment.get('rateLimitPush') || '10', 10) + 2;",
                  "let seen429 = 0;",
                  "function sendOne(i, cb) {",
                  "  pm.sendRequest({ url, method: 'POST', header: headers, body: { mode: 'raw', raw: 'bulk-' + i + '-' + Date.now() } }, (err, res) => {",
                  "    if (!err && res.code === 429) seen429++;",
                  "    cb();",
                  "  });",
                  "}",
                  "function series(i, done) {",
                  "  if (i >= attempts) return done();",
                  "  sendOne(i, () => series(i+1, done));",
                  "}",
                  "series(0, () => {",
