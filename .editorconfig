# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# General indentation defaults
indent_style = space
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.properties]
indent_size = 4

# Java settings
[*.java]
indent_style = space
indent_size = 4
max_line_length = off

# XML, JSON, Docker, etc.
[*.xml]
indent_size = 2

[*.json]
indent_size = 2

[Dockerfile]
indent_size = 2
